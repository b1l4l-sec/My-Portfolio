# Bilal Lbien Portfolio .htaccess
# InfinityFree Compatible Configuration

# Enable Rewrite Engine
RewriteEngine On

# Set RewriteBase - Change to / when deploying to root domain
RewriteBase /portfolio/

# Force HTTPS (uncomment when deployed with SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove www (optional)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

# Protect sensitive files
<FilesMatch "^(config|database|\.env|\.git|\.htaccess|\.htpasswd)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect directories - Use relative paths
RewriteRule ^config/ - [F,L]
RewriteRule ^includes/ - [F,L]
RewriteRule ^logs/ - [F,L]

# Allow access to uploads
<IfModule mod_rewrite.c>
    RewriteRule ^uploads/ - [L]
</IfModule>

# Clean URLs - Remove .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# Admin routing
RewriteRule ^admin/?$ admin/dashboard.php [L]
RewriteRule ^admin/login$ admin/login.php [L]
RewriteRule ^admin/logout$ admin/logout.php [L]
RewriteRule ^admin/dashboard$ admin/dashboard.php [L]
RewriteRule ^admin/skills$ admin/skills.php [L]
RewriteRule ^admin/certificates$ admin/certificates.php [L]
RewriteRule ^admin/messages$ admin/messages.php [L]
RewriteRule ^admin/projects$ admin/projects.php [L]
RewriteRule ^admin/resume$ admin/resume.php [L]

# Public routing
RewriteRule ^contact$ contact.php [L]

# Error Pages
ErrorDocument 404 /portfolio/index.php
ErrorDocument 500 /portfolio/index.php

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
</IfModule>

# Disable directory browsing
Options -Indexes

# Default file
DirectoryIndex index.php index.html
